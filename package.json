{
    "private": true,
    "scripts": {
        "build:css": "tailwindcss -i ./resources/css/custom.css -o ./public/css/app/custom-stylesheet.css --minify",
        "watch:css": "tailwindcss -i ./resources/css/custom.css -o ./public/css/app/custom-stylesheet.css --watch",
        "dev": "concurrently \"npm run watch:css\" \"vite\"",
        "build": "concurrently \"npm run build:css\" \"vite build\""
    },
    "devDependencies": {
        "@fancyapps/ui": "^5.0.36",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "vite": "^6.0.11"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.11"
    }
}
